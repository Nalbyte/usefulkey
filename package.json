{
  "name": "usefulkey",
  "version": "0.1.1",
  "description": "Open‑source, Self‑hostable, Typescript toolkit for API keys and rate limiting. Designed to be simple to adopt and easy to extend.",
  "website": "https://usefulkey.nalbyte.com",
  "keywords": [
    "api-keys",
    "rate-limiting",
    "typescript",
    "self-hosted",
    "open-source",
    "nalbyte"
  ],
  "bugs": {
    "url": "https://github.com/nalbyte/usefulkey/issues"
  },
  "repository": "https://github.com/nalbyte/usefulkey",
  "author": "Nalbyte",
  "homepage": "https://usefulkey.nalbyte.com",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "main": "dist/index.cjs",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "unbuild",
    "build:all": "turbo build",
    "build:examples": "turbo run build --filter=astro --filter=bun --filter=usefulkey-hono-minimal --filter=nextjs",
    "start:examples": "sh -c '(pnpm --filter astro run preview) & (pnpm --filter nextjs run start) & (pnpm -r --filter bun --filter usefulkey-hono-minimal run start --parallel) & wait'",
    "serve:examples": "pnpm run build:examples && pnpm run start:examples",
    "test": "vitest",
    "test:run": "vitest run",
    "test:cloudflare": "vitest --config tests/integration/cloudflare-worker/vitest.config.mts",
    "test:cloudflare:run": "vitest run --config tests/integration/cloudflare-worker/vitest.config.mts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "pnpm test:run && pnpm test:cloudflare:run && pnpm test:integration",
    "biome": "biome check --write",
    "biome:lint": "biome check"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@cloudflare/vitest-pool-workers": "^0.8.19",
    "@types/node": "^24.2.1",
    "better-sqlite3": "12.2.0",
    "pg": "^8.16.3",
    "redis": "5.8.1",
    "turbo": "^2.5.6",
    "typescript": "^5.5.4",
    "unbuild": "^3.6.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "js-sha256": "^0.11.0"
  },
  "engines": {
    "node": ">=18.17"
  }
}
